#!/usr/bin/env bash

LOCATION="{{ .chezmoi.hostname }}"   # or hard-code "Warsaw"
CACHE_DIR="$HOME/.config/sketchybar/cache"
CACHE_FILE="$CACHE_DIR/weather_raw.txt"
CACHE_DURATION=1800  # 30 minutes

mkdir -p "$CACHE_DIR"

fetch_raw() {
  curl -s --max-time 10 "wttr.in/${LOCATION}?m" -o "$CACHE_FILE"
}

load_raw() {
  if [[ -f "$CACHE_FILE" ]]; then
    mod=$(stat -f %m "$CACHE_FILE" 2>/dev/null || stat -c %Y "$CACHE_FILE")
    age=$(( $(date +%s) - mod ))
    (( age < CACHE_DURATION )) && return
  fi
  fetch_raw
}

map_icon() {
  local d="$1"
  case "$d" in
    Clear|Sunny)       echo "â˜€ï¸" ;;
    Partly*|Cloudy)    echo "â›…" ;;
    Overcast|Clouds)   echo "â˜ï¸" ;;
    Mist|Fog)          echo "ðŸŒ«ï¸" ;;
    Drizzle|Rain*|Showers*) echo "ðŸŒ§ï¸" ;;
    Thunder*|Storm*)   echo "â›ˆï¸" ;;
    Snow*|Sleet*)      echo "â„ï¸" ;;
    *)                 echo "ðŸŒ¤ï¸" ;;
  esac
}

# Main
MODE="${1:-both}"
load_raw

RAW=$(<"$CACHE_FILE")

# Extract description: the first line containing â€œ\   /â€
DESC=$(echo "$RAW" | awk '/\\   \//{print $NF; exit}')

# Extract temperature: look for â€œ+31Â°Câ€ or â€œ-02Â°Câ€
TEMP=$(echo "$RAW" | grep -oE '[+-][0-9]{1,2}Â°C' | head -1)

ICON=$(map_icon "$DESC")

if [[ -n "$ICON" && -n "$TEMP" ]]; then
  case "$MODE" in
    icon) sketchybar --set weather.icon icon="$ICON" ;;
    temp) sketchybar --set weather.temp label="$TEMP" ;;
    *)    sketchybar --set weather.icon icon="$ICON" \
                     --set weather.temp label="$TEMP" ;;
  esac
else
  case "$MODE" in
    icon) sketchybar --set weather.icon icon="â“" ;;
    temp) sketchybar --set weather.temp label="--" ;;
    *)    sketchybar --set weather.icon icon="â“" \
                     --set weather.temp label="--" ;;
  esac
fi

